<script>
	$("#SaveBtn").click(function myfunction() {
		$.ajax({
			type: "Post",
			url: '/Product/Create',
			data:	$("#createProductForm").serialize()

		})
			.done(function (response) {
				$("#tableContainer").html(response);
				$("#createProduct").html("");
			})
			.fail(function (XMLHttpRequest, textStatus, errorThrown) {
				alert("Ajax Request Failed");
			});
	});

</script>